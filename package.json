{
  "name": "prac-extension",
  "displayName": "Page Replacement Algorithm Comparison",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onWebviewPanel:analyzeView",
    "workspaceContains:**/prac.ini",
    "onCommand:prac-extension.clean",
    "onCommand:prac-extension.build",
    "onCommand:prac-extension.run",
    "onCommand:prac-extension.analyze"
  ],
  "main": "./out/main.js",
  "contributes": {
    "commands": [
      {
        "command": "prac-extension.clean",
        "title": "Clean",
        "category": "PRAC"
      },
      {
        "command": "prac-extension.build",
        "title": "Build",
        "category": "PRAC"
      },
      {
        "command": "prac-extension.run",
        "title": "Run",
        "category": "PRAC"
      },
      {
        "command": "prac-extension.analyze",
        "title": "Analyze",
        "category": "PRAC"
      }
    ],
    "taskDefinitions": [
      {
        "type": "PRAC",
        "required": [
          "task"
        ],
        "properties": {
          "task": {
            "type": "string",
            "description": "PRAC Task ID"
          }
        }
      }
    ],
    "problemMatchers": [
      {
        "name": "prac",
        "owner": "cpp",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "^([^:\\n]+):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "typescript": "^4.5.5"
  }
}
